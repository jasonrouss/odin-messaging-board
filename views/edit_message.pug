extends layout
block content 
  h1 #{title}
  form(method="POST",action="/messages/edit/"+message._id)
   #form-group
    label Title: 
    input.form-control(name="title",type="text",value=message.title)
   #form-group
    label Author: 
    input.form-control(name="author",type="text" value=message.author) 
   #form-group
    label Body: 
    textarea.form-control(name="body")=  message.body
   br
   input.btn.btn-primary(type="submit",value="Submit")
 
  